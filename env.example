# Slack Configuration
SLACK_TOKEN=xoxb-your-slack-bot-token
SIGNING_SECRET=your-slack-signing-secret
VERIFICATION_TOKEN=your-slack-verification-token

# ArgoCD Configuration
ARGOCD_TOKEN=your-argocd-api-token
ARGOCD_URL=https://argocd.example.com

# Bot Configuration (Optional)
BOT_NAME=ArgoCD Deployment Bot
BOT_DESCRIPTION=ArgoCD Deployment Bot, designed to assist you with production deployment, rollback procedures, and status checks for current deployments and tags.

# Flask Configuration (Optional)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# ArgoCD API Configuration (Optional)
ARGOCD_VERIFY_SSL=False
ARGOCD_LOG_TAIL_LINES=50

# Rollback Table Configuration (Optional)
# Comma-separated list of Helm parameter field names to display in rollback table
# The bot will fetch these fields from Helm parameters for each revision
# Example: ROLLBACK_TABLE_FIELDS=tag_version,replicaCount
ROLLBACK_TABLE_FIELDS=

# Auto-Sync Handling (Optional)
# Automatically disable auto-sync when rollback fails due to auto-sync being enabled
# If set to True, the bot will disable auto-sync, perform rollback, then retry
# Example: AUTO_DISABLE_SYNC_ON_ROLLBACK=True
AUTO_DISABLE_SYNC_ON_ROLLBACK=False

# User Authorization (Optional)
# Comma-separated list of Slack user IDs allowed to use the bot
# If not set or empty, all users will be allowed (not recommended for production)
# To find user IDs, check Slack API or use: https://api.slack.com/methods/users.list
# Example: ALLOWED_USERS=U1234567890,U0987654321,U1122334455
ALLOWED_USERS=
